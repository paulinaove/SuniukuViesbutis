<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="mybatis.model.Virejas" alias="Virejas"/>
        <typeAlias type="mybatis.model.Patiekalas" alias="Patiekalas"/>
        <typeAlias type="mybatis.model.Uzsakymas" alias="Uzsakymas"/>
        <typeAlias type="mybatis.model.Patiekalasuzsakymas" alias="Patiekalasuzsakymas"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <!--<property name="data_source" value="java:global/StudentsDataSource"/>-->
                <property name="data_source" value="openejb:Resource/StudentsDataSource"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis.xml.PatiekalasMapper.xml"/>
        <mapper resource="mybatis/xml/StudentMapper.xml"/>
        <mapper resource="mybatis/xml/StudentCourseMapper.xml"/>
        <mapper resource="mybatis/xml/UniversityMapper.xml"/>
    </mappers>
</configuration>