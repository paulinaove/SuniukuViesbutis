<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="restoranas" targetRuntime="MyBatis3Simple">
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://localhost:3306/restoranas"
                        userId="root"
                        password="">
        </jdbcConnection>

        <javaModelGenerator targetPackage="mybatis.model" targetProject="MAVEN" />

        <!-- Anotacij킬 variantas - ma탑iau galimybi킬, bet paprastesnis -->
        <!--<javaClientGenerator type="ANNOTATEDMAPPER" targetPackage="lt.vu.usecases.mybatis.dao" targetProject="MAVEN" />-->

        <!-- XML variantas - daugiau galimybi킬 -->
        <sqlMapGenerator targetPackage="mybatis.xml" targetProject="MAVEN" />
        <javaClientGenerator type="XMLMAPPER" targetPackage="mybatis.dao" targetProject="MAVEN" />

        
        <table schema="public" tableName="virejas">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
            <ignoreColumn column="opt_lock_version" />
        </table>
        <table schema="public" tableName="patiekalas">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
            <ignoreColumn column="opt_lock_version" />
        </table>
        <table schema="public" tableName="uzsakymas">
            <generatedKey column="id" identity="true" sqlStatement="JDBC" />
            <ignoreColumn column="opt_lock_version" />
        </table>
        <table schema="public" tableName="patiekalasuzsakymas">
        </table>
    </context>
</generatorConfiguration>